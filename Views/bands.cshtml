@{
    Layout = "Shared/_Layout.cshtml";
}

<h2>Bands:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var band in Model)
    {
      <li><a href="/bands/@band.GetId()">@band.GetName()</a></li>
    }
  </ul>
}
<h4><a href="/band/new" class="btn">Add a new band</a></h4>
<form action="/bands/delete_all" method="post">
    <button type="submit" class="btn">Delete all bands</button>
</form>
