@{
    Layout = "Shared/_Layout.cshtml";
}

<h2>Venues:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var venue in Model)
    {
      <li><a href="/venues/@venue.GetId()">@venue.GetName()</a></li>
    }
  </ul>
}
<h4><a href="/venue/new" class="btn">Add a new venue</a></h4>
<form action="/venues/delete_all" method="post">
    <button type="submit" class="btn">Delete all venues</button>
</form>
